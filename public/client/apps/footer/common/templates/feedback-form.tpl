<style type="text/css">
    .js-toggle{
        cursor: pointer;
    }
</style>
<!-- data-toggle="collapse"
               data-parent="#accordion"-->
<div class="widget-box">
    <div id="accordion">
        <h3>
            <a class="accordion-toggle js-toggle">Is something wrong with this page?</a>
        </h3>
    </div>
    <div id="collapseOne" class="xpanel-collapse collapse out">
        <div class="xpanel-body">

            <input type="hidden" value="support feedback" name="content_type" id="support_content_type"/>
            <input type="hidden" value="feedback" name="support_category" id="support_support_category"/>
            <div class="gf_browser_chrome gform_wrapper" id="gform_wrapper_1">
                <a id="gf_1" name="gf_1" class="gform_anchor"></a>

                    <div class="gform_heading">
                        <span class="gform_description">Tell us what you were doing and what's wrong.</span>
                    </div>
                    <div class="gform_body">
                        <ul id="gform_fields_1"
                            class="gform_fields top_label description_below">
                            <li id="field_1_1" class="gfield gfield_contains_required">
                                <label class="gfield_label" for="support_content">
                                    Your feedback
                                    <span class="gfield_required">*</span>
                                </label>

                                <div class="ginput_container">
                                    <textarea id="support_content"
                                              class="textarea medium" tabindex="1"
                                              rows="10" cols="50"
                                              name="content"></textarea>
                                </div>
                            </li>
                            <li id="field_1_4" class="gfield">
                                <label class="gfield_label" for="support_email">Your
                                    email</label>

                                <div class="ginput_container">
                                    <input id="support_email" type="text"
                                           value="" class="medium"
                                           tabindex="2"
                                           name="email">
                                </div>
                            </li>
                        </ul>
                    </div>
                    <div class="gform_footer top_label">
                        <input type="submit" id="gform_submit_button_1"
                               class="button gform_button js-submit" value="Send feedback"
                               tabindex="3">
                    </div>

            </div>

        </div>
    </div>

</div>